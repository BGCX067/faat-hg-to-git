<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:GrayscaleEffect="clr-namespace:GrayscaleEffect;assembly=GrayscaleEffect">

	<Style TargetType="TreeViewItem">
		<Style.Resources>
			<LinearGradientBrush x:Key="{x:Static SystemColors.ControlBrushKey}" EndPoint='0 1'>
				<GradientStop Color='#7777AAFF' />
				<GradientStop Offset='1' Color='#777799BB' />
			</LinearGradientBrush>
			<LinearGradientBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" EndPoint='0 1'>
				<GradientStop Color='#7777AAFF' />
				<GradientStop Offset='1' Color='#777799BB' />
			</LinearGradientBrush>
		</Style.Resources>
		<Style.Triggers>
			<Trigger Property='IsMouseOver' Value='True'>
				<Setter Property='Background'>
					<Setter.Value>
						<LinearGradientBrush EndPoint='0 1' Opacity='.4'>
							<GradientStop Color='#7777AAFF' />
							<GradientStop Offset='1' Color='#777799BB' />
						</LinearGradientBrush>
					</Setter.Value>
				</Setter>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style TargetType="Border" x:Key="LogonBorder">
		<Setter Property="Background">
			<Setter.Value>
				<LinearGradientBrush EndPoint='0 1'>
					<GradientStop Color='#BB444444' />
					<GradientStop Color='#BB000000' Offset='1' />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType='TextBox' x:Key='Content'>
		<Setter Property='TextOptions.TextRenderingMode' Value='ClearType' />
	</Style>
	
	<Style TargetType='GridSplitter'>
		<Setter Property='RenderTransformOrigin' Value='.5 .5' />
		<Setter Property='RenderTransform'>
			<Setter.Value>
				<ScaleTransform CenterX='.5' CenterY='.5' />
			</Setter.Value>
		</Setter>
		<Setter Property='Width' Value='4' />
		<Setter Property='Background'>
			<Setter.Value>
				<LinearGradientBrush EndPoint='1 0'>
					<GradientStop Color='#44FFFFFF' />
					<GradientStop Offset='1' Color='#44000000' />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property='Template'>
			<Setter.Value>
				<ControlTemplate>
					<Border Background='{TemplateBinding Background}' >
						<StackPanel VerticalAlignment='Center'>
							<StackPanel.Resources>
								<Style TargetType='Ellipse'>
									<Setter Property='StrokeThickness' Value='1' />
									<Setter Property='Stroke' Value='#AA000000' />
									<Setter Property='Width' Value='3' />
									<Setter Property='Height' Value='3' />
									<Setter Property='Margin' Value='0 3' />
								</Style>
							</StackPanel.Resources>
							<Ellipse />
							<Ellipse />
							<Ellipse />
							<Ellipse />
							<Ellipse />
						</StackPanel>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property='HorizontalAlignment' Value='Center' />
